<div class="container p-8">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card-body">
                <!-- Para saber donde enviara los datos -->
                <form action="/buques/add" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="code_uuss" placeholder="Codigo Unidad de Superfice" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name = "name_uuss" class="form-control" placeholder="Nombre de la Unidad de Superficie, si esxiste">
                    </div>
                    <div class="form-group">
                        <textarea name="description" rows="2" class="form-control" placeholder="Descripcion"></textarea>
                    </div>
                    <div class="form-group">
                    <label for="sel1">Selecciona Cargo:</label>
                    <select class="form-control" id="sel1" name="id_title"  aria-placeholder=" ">
                        {{#each titles}}
                        <option value="{{id_title}}">
                            {{title}}
                        </option>
                        {{/each }}

                    </select>
                    </div>
