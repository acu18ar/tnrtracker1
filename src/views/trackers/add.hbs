<div class="container p-8">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card-body">
                <!-- Para saber donde enviara los datos -->
                <form action="/trackers/add" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="tracker_code" placeholder="Codigo Tracker" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name = "tracker_cell_number" class="form-control" placeholder="Numero Celular del Tracker">
                    </div>
                    <div class="form-group">
                        <textarea name="tracker_obs" rows="2" class="form-control" placeholder="Observaciones"></textarea>
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-success btn-block">GUARDAR</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>