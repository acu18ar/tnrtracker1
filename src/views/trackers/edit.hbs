<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card-body">
                <!-- Para saber donde enviara los datos -->
                <form action="/uuss/edit/{{uuss.id_uuss}}" method="POST">
                    <div class="form-group">
                        <input type="text" value="{{uuss.code_uuss}}" class="form-control" name="code_uuss" placeholder="Codigo de la Unidad de Superficie" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" value="{{uuss.name_uuss}}" name = "name_uuss" class="form-control" placeholder="Nombre de la Unidad de Superficie, si existe">
                    </div>
                    <div class="form-group">
                        <textarea name="description"  rows="2" class="form-control" placeholder="Descripcion">{{uuss.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>