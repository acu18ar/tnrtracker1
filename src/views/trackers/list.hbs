<div class="container p-8">
<table class="table" class="container p-8">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Codigo Unidad de Superficie</th>
            <th scope="col">Nombre Unidad de Superficie</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Acciones</th>
        </tr>
     </thead>
     <tbody>
        {{#each uuss}}
        <tr>
            <td>number</td>
            <td>{{this.code_uuss}}</td>
            <td>{{this.name_uuss}}</td>
            <td>{{this.description}}</td>
            <td>
                <a href="/uuss/delete/{{id_uuss}}" class="btn btn-danger">Delete U.S.</a>
                <a href="/uuss/edit/{{id_uuss}}" class="btn btn-secondary">Edit U.S.</a>
            </td>
        </tr>
        {{/each}}
     </tbody>
</table>
</div>

